<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/backgroundColor">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="23dp"
        android:paddingVertical="30dp">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.Title"
                    android:layout_gravity="left"
                    android:text="WELCOME"
                    />
                <TextView
                    android:id="@+id/TextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Text.Name"
                    android:layout_gravity="left"
                    android:text="Faturrahman Alul"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/user_profile"
                />
        </LinearLayout>


        <EditText
            android:id="@+id/SearchBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginTop="16dp"
            android:text="Search movie or cinema here"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:background="@drawable/ic_rounded_rectangle_blue"
            app:layout_constraintStart_toStartOf="@+id/header"
            app:layout_constraintTop_toBottomOf="@+id/header"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="230dp"
            android:layout_height="103dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/secondaryColor"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/SearchBox"
            app:layout_constraintTop_toBottomOf="@id/SearchBox">
            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_gravity="right">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar2"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="13dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/secondaryDarkColor">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    style="@style/Text"
                    android:drawableLeft="@drawable/ic_baseline_flash_on_24"
                    android:text="Advance Ticket Sell"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                style="@style/Text.SubTitleSmall"
                android:text="GRAB YOUR SEAT NOW!"
                android:layout_marginTop="50dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started 25 Nov 2022"
                style="@style/Text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="65dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/card1"
            app:layout_constraintTop_toBottomOf="@id/card1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.SubTitle"
                android:text="Category"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="See All"
                android:drawableEnd="@drawable/ic_baseline_arrow_right_alt_24"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/categoryChoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/category"
            app:layout_constraintTop_toBottomOf="@id/category"
            android:layout_marginLeft="6dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#D9D9D9">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/icons8_action_movie_64"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Text.Normal"
                        android:text="Action"
                        android:gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#D9D9D9">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/icons8_horror_48"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Text.Normal"
                        android:text="Horror"
                        android:gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#D9D9D9">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/icons8_comedy_48"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Text.Normal"
                        android:text="Comedy"
                        android:gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="63dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="22dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#D9D9D9">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/icons8_drama_48"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Text.Normal"
                        android:text="Drama"
                        android:gravity="bottom|center_horizontal"
                        android:layout_marginBottom="5dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/nowShowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Text.SubTitle"
            android:text="Now Showing"
            app:layout_constraintStart_toStartOf="@id/category"
            app:layout_constraintTop_toBottomOf="@id/categoryChoice"/>
        <LinearLayout
            android:id="@+id/movieDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="@id/nowShowing"
            app:layout_constraintTop_toBottomOf="@id/nowShowing">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="138dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#D9D9D9">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/wakandaForever"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_4_5star"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black Panther: Wakanda Forever"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ryan Coogler"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022"/>
                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp"
                    style="@style/Text.SubTitleBlack"
                    android:text="Book Now"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="138dp"
                    android:layout_height="165dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#D9D9D9">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blackAdam"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:src="@drawable/ic_4star"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black Adam"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaume Collet-Serra"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2022"/>
                <TextView
                    android:layout_width="138dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp"
                    style="@style/Text.SubTitleBlack"
                    android:text="Book Now"
                    android:textAlignment="center"
                    android:background="@drawable/rectangle"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/movieDetail"
            app:layout_constraintTop_toBottomOf="@id/movieDetail">
            <androidx.cardview.widget.CardView
                android:layout_width="344dp"
                android:layout_height="66dp"
                app:cardBackgroundColor="#D9D9D9"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="33dp"
                        android:src="@drawable/ic_baseline_home_24"/>
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="51dp"
                        android:src="@drawable/ic_baseline_movie_24"/>
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="51dp"
                        android:src="@drawable/icons8_cinema_ticket_30"/>
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="51dp"
                        android:src="@drawable/ic_baseline_person_24"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
